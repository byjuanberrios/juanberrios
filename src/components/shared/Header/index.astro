---
import { SITE } from "../../../config";

import MenuDesktop from "./MenuDesktop";
import MenuMobile from "./MenuMobile";
import MenuButton from "./MenuButton";
import ToggleThemeButton from "./ToggleThemeButton.astro";
---

<!-- Header Wrapper -->
<header class="bg-zinc-100 dark:bg-zinc-900 relative">
  <!-- Header Container -->
  <div
    class="flex flex-wrap md:flex-nowrap justify-between items-center mx-auto py-3 px-4"
  >
    <!-- Branding -->
    <div class="flex">
      <a href="/" class="font-bold">{SITE.name}</a>
    </div>

    <!-- <Menu Desktop /> -->
    <MenuDesktop />

    <!-- Actions: Toggle theme + Menu button -->
    <!-- <ToggleThemeButton />: Renderiza el botón para cambiar el tema del sitio (Usa el script `toggle-theme.js`) -->
    <!-- <MenuButton />: Renderiza el botón que muestra u oculta el menú mobile (usa `nanostores` para manejar el estado de manera global) -->
    <div class="md:ml-12 flex gap-6">
      <ToggleThemeButton />
      <MenuButton client:load />
    </div>

    <!-- Menú Mobile -->
    <MenuMobile client:load />
  </div>
</header>
